@model IEnumerable<FinPort.Models.Portfolio>
@{
    ViewData["Title"] = "Portfolios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Buttons {
    <a asp-action="Create" class="btn btn-primary">Create New</a>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="d-none d-sm-table-cell">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="d-none d-sm-table-cell">
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th class="d-none d-sm-table-cell">
                @Html.DisplayNameFor(model => model.Change)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="d-none d-sm-table-cell">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="d-none d-sm-table-cell" data-type="portfolio" data-field="value" data-id="@item.Id" data-value="@item.Value.ToJsonNumberFormat()">
                    @Html.DisplayFor(modelItem => item.Value) â‚¬
                </td>
                <td class="d-none d-sm-table-cell" data-type="portfolio" data-field="change" data-id="@item.Id" data-value="@item.Change.ToJsonNumberFormat()">
                    @Html.DisplayFor(modelItem => item.Change) %
                </td>
                <td>
                    <div class="dropdown d-flex justify-content-end">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Actions
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>